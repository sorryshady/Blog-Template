[user]
	type = Akhil Nishad                # Sets the commit author name.
	email = akhilnishadofficial@gmail.com  # Sets the commit author email.

[core]
	editor = cursor --wait          # Uses Cursor IDE for commit messages.
	autocrlf = input                # Ensures consistent line endings across environments.
	excludesfile = ~/.gitignore_global  # Global gitignore file to ignore system/IDE files.
[init]
	defaultBranch = main

[color]
	ui = auto                      # Enables colorized output for better readability.

[alias]
	st = status                    # Shortcut for 'git status'.
	co = checkout                  # Shortcut for 'git checkout'.
	br = branch                    # Shortcut for 'git branch'.
	ci = commit                    # Shortcut for 'git commit'.
	cm = commit -m                 # Shortcut for 'git commit -m'.
	lg = log --graph --oneline --decorate --all  # Graphical log view.

[push]
	default = simple               # Uses simple push behavior to only push current branch if tracking remote branch.
	autoSetupRemote = true         # Automatically sets upstream branch when pushing a new local branch.
